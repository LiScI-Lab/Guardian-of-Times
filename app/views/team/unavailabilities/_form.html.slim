= render 'application/form_errors', errors: @unavailability.errors

= simple_form_for([@team, @member, @unavailability]) do |f|
  = f.input :start_date, as: :date, required: true, input_html: {class: 'no-autoinit', type: "date"}, wrapper_html: {class: 's12 m3 l2'}
  = f.input :end_date, as: :date, input_html: {class: 'no-autoinit', type: "date"}, wrapper_html: {class: 's12 m3 l2'}, hint: "Unavailabilities are inclusive the end day!"
  = f.input :description, as: :text
  = f.button :button
