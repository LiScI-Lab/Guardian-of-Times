.col.s12.m6.l3
  .card
    .card-content
      span.card-title
        = project.name
      .section
        = asciidoc project.description
      .divider
      .section
        | TODO: here will be many tags!

    .card-action
      - member = project.members.find_by user: @current_user
      - if member
        - if member.invited?
          = link_to t('project.actions.join'), join_project_path(project), method: :patch
        - else
          = link_to t('project.actions.show'), project_path(project)